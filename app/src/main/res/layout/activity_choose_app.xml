<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="6dp"
    android:background="@color/white"
    android:gravity="center">
    <es.dit.gsi.rulesframework.util.TitilliumTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:fontName="Titillium-Regular.otf"
        android:text="Choose the aplication you want to launch:"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/rulesFrameworkLayout"
        android:background="@drawable/choose_app_background_selector"
        android:orientation="vertical">
        <es.dit.gsi.rulesframework.util.TitilliumTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            app:fontName="Titillium-Regular.otf"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Rules Framework"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/beaconsLayout"
        android:background="@drawable/choose_app_background_selector"
        android:orientation="vertical">
        <es.dit.gsi.rulesframework.util.TitilliumTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            app:fontName="Titillium-Regular.otf"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="Beacons"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/gsi_short"/>
    </RelativeLayout>
</LinearLayout>